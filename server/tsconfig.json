{
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": ".",
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "target": "ES2022",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  },
  "files": ["./environment.d.ts"],
  "include": ["src", "environment.d.ts"],
  "exclude": ["node_modules"]
}
